<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bmrd.stesbuddy.SelectedNGO">

    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameText"
        android:layout_marginStart="41dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/NameText"
        android:text="TextView"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/idText"
        android:layout_alignStart="@+id/NameText"
        android:text="NGO ID:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="31dp"
        android:text="Address:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="25dp"
        android:text="Domain:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/DomainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignStart="@+id/idText"
        android:text="TextView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/AddressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DomainText"
        android:layout_alignTop="@+id/textView18"
        android:text="TextView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="23dp"
        android:text="Vacancy:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/VacancyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignStart="@+id/AddressText"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView22"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="25dp"
        android:text="Date:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/DateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignStart="@+id/VacancyText"
        android:text="TextView"
        android:textSize="16dp" />

    <Button
        android:id="@+id/ApplyBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_marginTop="47dp"
        android:layout_toEndOf="@+id/textView24"
        android:text="Apply"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/CurrentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/textView24"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/domainQuant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/textView24"
        android:layout_marginTop="15dp"
        android:text="TextView" />
</RelativeLayout>
